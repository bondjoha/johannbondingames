<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Booking Management</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
<div class="container py-4">

  <!-- Header -->
  <header class="mb-3 text-center bg-secondary text-white py-3 shadow rounded">
      <h1 class="display-5">Booking List and Details</h1>
  </header>

  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand bg-secondary mb-4">
      <div class="container">
          <a href="Administrator.php" class="btn btn-link text-white me-3">Administrator Page</a>
          <a href="LoginPage.php" class="btn btn-link text-white me-3">Sign In Page</a>
          <form action="logout.php" method="POST" class="d-inline">
              <button type="submit" class="btn btn-link text-white">Logout</button>
          </form>
      </div>
  </nav>

  <!-- Alert Messages -->
  {% if message %}
      <div class="alert alert-success text-center">{{ message }}</div>
  {% endif %}
  {% if error %}
      <div class="alert alert-danger text-center">{{ error }}</div>
  {% endif %}

 <!-- Add New Booking Form  -->
<form method="POST" class="row g-3">
    <!-- Hotel selection -->
    <div class="col-md-3">
        <label class="form-label">Select Hotel</label>
        <select name="Hotel_Id" id="hotelSelect" class="form-select" required>
            <option value="">-- Select Hotel --</option>
            <!-- List avaliable hotels in the drop down-->
            {% for hotel in hotels %}
                <option value="{{ hotel.Hotel_Id }}">{{ hotel.Hotel_Name }}</option>
            {% endfor %}
        </select>
    </div>

    <!-- Room type selection -->
    <div class="col-md-3">
        <label class="form-label">Select Room Type</label>
        <select name="Room_Type" id="roomTypeSelect" class="form-select" required disabled>
            <option value="">-- Select Type --</option>
            <!-- list rooo type selection in the dropdown -->
            {% for room in rooms %}
                <option value="{{ room.Room_Type }}" data-hotel="{{ room.Hotel_Id }}">
                    {{ room.Room_Type }}
                </option>
            {% endfor %}
        </select>
    </div>

    <!-- User list availiable only for administrator role -->
    <div class="col-md-3">
        <label class="form-label">Select User</label>
        <select name="CredentialsID" class="form-select" required>
            <option value="">-- Select User --</option>
            {% for user in users %}
                <option value="{{ user.CredentialsID }}">{{ user.FirstName }} {{ user.Surname }}</option>
            {% endfor %}
        </select>
    </div>

    <!-- Check-in/out -->
    <div class="col-md-3">
        <label class="form-label">Check-In</label>
        <input type="date" name="Check_in" class="form-control" required>
    </div>
    <div class="col-md-3">
        <label class="form-label">Check-Out</label>
        <input type="date" name="Check_out" class="form-control" required>
    </div>

    <!-- Submit -->
    <div class="col-12">
        <button type="submit" name="submitBookingRecord" class="btn btn-success">Book Room</button>
    </div>
</form>

<!-- Booking List Display -->
<div class="row g-3 mt-4">
    {% if bookings|length > 0 %}
        {% for booking in bookings %}
            <div class="col-md-4 col-sm-6 col-12">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">

                        <!-- Booking Edit Form -->
                        <form method="POST">

                            <!-- Booking ID -->
                            <h5 class="card-title text-primary">Booking ID: {{ booking.Booking_Id }}</h5>

                            <!-- Display Hotel and Room Type -->
                            <p class="text-muted mb-2"><strong>Hotel:</strong> {{ booking.Hotel_Name }}</p>
                            <p class="text-muted mb-2"><strong>Room:</strong> {{ booking.Room_Number }} ({{ booking.Room_Type }})</p>
                            <p class="text-muted mb-2"><strong>Room Type:</strong> {{ booking.Room_Type }}</p>
                            <!-- Room selection -->
                            <div class="mb-2">
                                <label class="form-label">Room</label>
                                <select name="Room_Id" class="form-select">
                                    {% for room in rooms %}
                                        <option value="{{ room.Room_Id }}" {% if room.Room_Id == booking.Room_Id %}selected{% endif %}>
                                            {{ room.Hotel_Name }} - {{ room.Room_Type }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>

                            <!-- User selection so that it can be edited-->
                            <div class="mb-2">
                                <label class="form-label">User</label>
                                <select name="CredentialsID" class="form-select">
                                    {% for user in users %}
                                        <option value="{{ user.CredentialsID }}" {% if user.CredentialsID == booking.CredentialsID %}selected{% endif %}>
                                            {{ user.FirstName }} {{ user.Surname }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>

                            <!-- Check-in/out -->
                            <div class="mb-2">
                                <label class="form-label">Check-In</label>
                                <input type="date" name="Check_in" class="form-control" value="{{ booking.Check_in }}" required>
                            </div>
                            <div class="mb-2">
                                <label class="form-label">Check-Out</label>
                                <input type="date" name="Check_out" class="form-control" value="{{ booking.Check_out }}" required>
                            </div>

                            <!-- Hidden Booking ID -->
                            <input type="hidden" name="Booking_Id" value="{{ booking.Booking_Id }}">

                            <!-- Action buttons -->
                            <div class="d-flex justify-content-between mt-3">
                                <button type="submit" name="updatebooking" class="btn btn-primary btn-sm">Save</button>
                                <button type="submit" name="deletebooking" class="btn btn-danger btn-sm" onclick="return confirm('Delete this booking?');">Delete</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <p class="text-center text-muted">No bookings found.</p>
    {% endif %}
</div>

<script src="js/filteringRooms.js"></script>

</body>
</html>