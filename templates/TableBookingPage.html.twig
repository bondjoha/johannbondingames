<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Booking Management</title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
<div class="container mx-auto py-8 px-4">

  <!-- Header -->
  <header class="mb-6 text-center bg-gray-700 text-white py-4 rounded shadow">
      <h1 class="text-3xl font-semibold">Booking List and Details</h1>
  </header>

    <!-- Navigation Bar -->
    <nav class="bg-gray-700 mb-6 rounded shadow">
        <div class="flex items-center justify-start space-x-2 py-3 px-4">
            <a href="Administrator.php" class="text-white hover:underline font-medium">Administrator Page</a>
            <form action="logout.php" method="POST" class="inline">
                <button type="submit" class="text-white hover:underline font-medium">Logout</button>
            </form>
        </div>
    </nav>


  <!-- Alert Messages -->
  {% if message %}
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded mb-4 text-center">{{ message }}</div>
  {% endif %}
  {% if error %}
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded mb-4 text-center">{{ error }}</div>
  {% endif %}

  <!-- Add New Booking Form -->
  <form method="POST" class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">

    <!-- Hotel selection -->
    <div>
        <label class="block mb-1 font-medium">Select Hotel</label>
        <select name="Hotel_Id" id="hotelSelect" class="w-full border border-gray-300 rounded px-3 py-2" required>
            <option value="">-- Select Hotel --</option>
            {% for hotel in hotels %}
                <option value="{{ hotel.Hotel_Id }}">{{ hotel.Hotel_Name }}</option>
            {% endfor %}
        </select>
    </div>

    <!-- Room type selection -->
    <div>
        <label class="block mb-1 font-medium">Select Room Type</label>
        <select name="Room_Type" id="roomTypeSelect" class="w-full border border-gray-300 rounded px-3 py-2" required disabled>
            <option value="">-- Select Type --</option>
            {% for room in rooms %}
                <option value="{{ room.Room_Type }}" data-hotel="{{ room.Hotel_Id }}">
                    {{ room.Room_Type }}
                </option>
            {% endfor %}
        </select>
    </div>

    <!-- User selection -->
    <div>
        <label class="block mb-1 font-medium">Select User</label>
        <select name="CredentialsID" class="w-full border border-gray-300 rounded px-3 py-2" required>
            <option value="">-- Select User --</option>
            {% for user in users %}
                <option value="{{ user.CredentialsID }}">{{ user.FirstName }} {{ user.Surname }}</option>
            {% endfor %}
        </select>
    </div>

    <!-- Check-in -->
    <div>
        <label class="block mb-1 font-medium">Check-In</label>
        <input type="date" name="Check_in" id="check-in" class="w-full border border-gray-300 rounded px-3 py-2" required>
    </div>

    <!-- Check-out -->
    <div>
        <label class="block mb-1 font-medium">Check-Out</label>
        <input type="date" name="Check_out" id="check-out" class="w-full border border-gray-300 rounded px-3 py-2" required>
    </div>

    <!-- Submit -->
    <div class="md:col-span-4">
        <button type="submit" name="submitBookingRecord" class="bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded">Book Room</button>
    </div>
  </form>

  <!-- Booking List Display -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    {% if bookings|length > 0 %}
        {% for booking in bookings %}
            <div class="bg-white rounded shadow p-4 flex flex-col">
                <form method="POST" class="flex flex-col flex-1">

                    <h5 class="text-blue-600 font-semibold mb-2">Booking ID: {{ booking.Booking_Id }}</h5>

                    <p class="text-gray-600 mb-1"><strong>Hotel:</strong> {{ booking.Hotel_Name }}</p>
                    <p class="text-gray-600 mb-1"><strong>Room:</strong> {{ booking.Room_Number }} ({{ booking.Room_Type }})</p>

                    <div class="mb-2">
                        <label class="block mb-1 font-medium">Room</label>
                        <select name="Room_Id" class="w-full border border-gray-300 rounded px-2 py-1">
                            {% for room in rooms %}
                                <option value="{{ room.Room_Id }}" {% if room.Room_Id == booking.Room_Id %}selected{% endif %}>
                                    {{ room.Hotel_Name }} - {{ room.Room_Type }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="mb-2">
                        <label class="block mb-1 font-medium">User</label>
                        <select name="CredentialsID" class="w-full border border-gray-300 rounded px-2 py-1">
                            {% for user in users %}
                                <option value="{{ user.CredentialsID }}" {% if user.CredentialsID == booking.user_id %}selected{% endif %}>
                                    {{ user.FirstName }} {{ user.Surname }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="mb-2">
                        <label class="block mb-1 font-medium">Check-In</label>
                        <input type="date" name="Check_in" class="w-full border border-gray-300 rounded px-2 py-1" value="{{ booking.Check_in }}" required>
                    </div>

                    <div class="mb-2">
                        <label class="block mb-1 font-medium">Check-Out</label>
                        <input type="date" name="Check_out" class="w-full border border-gray-300 rounded px-2 py-1" value="{{ booking.Check_out }}" required>
                    </div>

                    <input type="hidden" name="Booking_Id" value="{{ booking.Booking_Id }}">

                    <div class="flex justify-between mt-3">
                        <button type="submit" name="updatebooking" class="bg-blue-600 hover:bg-blue-700 text-white text-sm py-1 px-3 rounded">Save</button>
                        <button type="submit" name="deletebooking" class="bg-red-600 hover:bg-red-700 text-white text-sm py-1 px-3 rounded" onclick="return confirm('Delete this booking?');">Delete</button>
                    </div>

                </form>
            </div>
        {% endfor %}
    {% else %}
        <p class="col-span-full text-center text-gray-500">No bookings found.</p>
    {% endif %}
  </div>

</div>

<!-- JavaScript to filter room types by selected hotel -->
<script src="javascripts/filteringRooms.js"></script>
<script src="javascripts/checkinoutdatesvalidation.js"></script>

</body>
</html>
