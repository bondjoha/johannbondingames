{% if hotel.weather %}
<div class="mt-12 mb-12 p-6 bg-white rounded-xl shadow-lg">
    <h4 class="text-2xl font-bold mb-6 text-center text-blue-800">5-Day Weather Forecast</h4>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
        {% for date, day in hotel.weather %}
        <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300 p-4 flex flex-col items-center border-2 border-yellow-500">
            <p class="font-semibold text-gray-700 mb-2">{{ date|date("D, d M") }}</p>
            <div class="w-20 h-20 mb-3">
                <img class="w-full h-full object-contain" src="http://openweathermap.org/img/wn/{{ day.weather.icon }}@2x.png" alt="{{ day.weather.description }}">
            </div>
            <p class="text-lg text-blue-600 font-medium mb-1">{{ day.weather.main }}</p>
            <p class="text-gray-500 text-sm">Min: {{ day.temp_min|number_format(1) }}°C | Max: {{ day.temp_max|number_format(1) }}°C</p>
        </div>
        {% endfor %}
    </div>
</div>
{% endif %}

