<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Booking - {{ hotel.Hotel_Name }}</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">

{% include 'headerwithoutsearch.html.twig' %}

{% set nav_links = [
    { 'href': 'index.php', 'text': 'Home' },
    { 'href': 'searchresult.php', 'text': 'Search Hotels' }
] %}

{% include 'navigationmenu.html.twig' with {'nav_links': nav_links, 'user': user} %}

<div class="container mx-auto p-6 max-w-3xl">
    <h1 class="text-3xl font-bold mb-4">Confirm Your Booking</h1>

    <!-- Booking summary -->
    <div class="bg-white shadow-lg rounded-lg p-6 mb-6">
        <h2 class="text-2xl font-semibold mb-2">{{ hotel.Hotel_Name }}</h2>
        <p class="text-gray-600 mb-1">{{ hotel.Hotel_Street_Name }}, {{ hotel.Hotel_City_Name }}, {{ hotel.Hotel_Country_Name }}</p>

        <!-- Room info -->
        <p class="text-gray-600 mb-1"><strong>Room Type:</strong> {{ room.Room_Type }}</p>
        <p class="text-gray-600 mb-1"><strong>Room Number:</strong> {{ room.Room_Number }}</p>
        <p class="text-gray-600 mb-1"><strong>Price per night:</strong> €{{ room.Price }}</p>

        <!-- Booking dates -->
        <p class="text-gray-600 mb-1"><strong>Check-in:</strong> {{ check_in }}</p>
        <p class="text-gray-600 mb-1"><strong>Check-out:</strong> {{ check_out }}</p>
        <p class="text-gray-600 mb-1"><strong>Nights:</strong> {{ nights }}</p>

        <!-- Total price -->
        <p class="text-gray-700 font-bold mt-2 text-lg">Total Price: €{{ totalPrice }}</p>
        
    </div>

    <!-- Payment Section -->
<div class="bg-white shadow-lg rounded-lg p-6 mb-6">
    <h2 class="text-2xl font-semibold mb-4">Payment Details</h2>

    <form method="POST" action="ConfirmBooking.php" class="space-y-4" id="paymentForm">
        <input type="hidden" name="hotel_id" value="{{ hotel.Hotel_Id }}">
        <input type="hidden" name="room_id" value="{{ room.Room_Id }}">
        <input type="hidden" name="check_in" value="{{ check_in }}">
        <input type="hidden" name="check_out" value="{{ check_out }}">
        <input type="hidden" name="country" value="{{ country }}">
        <input type="hidden" name="city" value="{{ city }}">
        <input type="hidden" name="star_rating" value="{{ star_rating }}">
        <input type="hidden" name="room_type" value="{{ room.Room_Type }}">
        <input type="hidden" name="price_per_night" value="{{ room.Price }}">
        <input type="hidden" name="total_price" value="{{ totalPrice }}">

        <!-- Cardholder Name -->
        <div>
            <label class="block text-sm font-semibold mb-1">Cardholder Name</label>
            <input type="text" name="card_name" placeholder="John Doe" required
                class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-yellow-400">
        </div>

        <!-- Card Number -->
        <div>
            <label class="block text-sm font-semibold mb-1">Card Number</label>
            <input type="text" name="card_number" placeholder="1234 5678 9012 3456" required
                pattern="\d{4}\s?\d{4}\s?\d{4}\s?\d{4}"
                title="Enter a valid 16-digit card number"
                class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-yellow-400">
        </div>

        <!-- Expiry and CVV -->
        <div class="flex gap-4">
            <div class="flex-1">
                <label class="block text-sm font-semibold mb-1">Expiry</label>
                <input type="text" name="expiry" placeholder="MM/YY" required
                    pattern="(0[1-9]|1[0-2])\/\d{2}"
                    title="Enter expiry date in MM/YY format"
                    class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-yellow-400">
            </div>
            <div class="w-24">
                <label class="block text-sm font-semibold mb-1">CVV</label>
                <input type="text" name="cvv" placeholder="123" required
                    pattern="\d{3,4}"
                    title="Enter a 3 or 4 digit CVV"
                    class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-yellow-400">
            </div>
        </div>

        <button type="submit"
            class="w-full py-3 px-4 bg-yellow-400 hover:bg-yellow-500 text-black font-semibold rounded shadow">
            Confirm & Pay €{{ totalPrice }}
        </button>
    </form>
</div>



{% include 'footer.html.twig' %}
<!-- JS -->
<script src="javascripts/paymentValidation.js"></script>
</body>
</html>
