<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Booking Confirmation</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS for Booking Confirmation -->
    <link href="style.css" rel="stylesheet">
</head>
<body class="booking-confirmation-page">

<!-- Navigation Bar -->
<nav class="navbar navbar-expand mb-4 bg-white shadow-sm">
    <div class="container d-flex align-items-center">

        <a href="index.php" class="navbar-brand text-gold fw-bold">Hotel Booking</a>

        <div class="ms-auto d-flex align-items-center">
            {% if user %}
                <span class="me-3 fw-bold text-gold" style="font-size: 1.05rem;">
                    Hello, {{ user.first_name }} {{ user.last_name }}
                </span>

                <form method="POST" action="logout.php" class="m-0">
                    <button type="submit" class="btn btn-outline-primary">Logout</button>
                </form>
            {% else %}
                <a href="Login.php" class="btn btn-outline-primary">Login</a>
            {% endif %}
        </div>
    </div>
</nav>

<!-- Page Header -->
<div class="page-header">
    <h2>{{ fullName }}, complete your booking</h2>
</div>

<div class="container">

    <!-- Hotel & Room Cards -->
    <div class="row g-4 justify-content-center align-items-stretch">

        <!-- HOTEL CARD -->
        <div class="col-md-6 col-lg-5">
            <div class="hotel-room-card card shadow-sm">
                {% set hotelImages = [hotel.Hotel_Image, hotel.Hotel_Image2, hotel.Hotel_Image3] | filter(v => v) %}
                {% if hotelImages %}
                    <div id="hotelCarousel" class="carousel slide hotel-carousel" data-bs-ride="carousel">
                        <div class="carousel-inner h-100">
                            {% for img in hotelImages %}
                                <div class="carousel-item {% if loop.first %}active{% endif %} h-100">
                                    <img src="{{ img }}" alt="Hotel Image" class="h-100 w-100">
                                </div>
                            {% endfor %}
                        </div>
                        {% if hotelImages|length > 1 %}
                            <button class="carousel-control-prev" type="button" data-bs-target="#hotelCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#hotelCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </button>
                        {% endif %}
                    </div>
                {% endif %}
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ hotel.Hotel_Name }}</h5>
                    <h6 class="card-subtitle mb-2">{{ hotel.Hotel_City_Name }}, {{ hotel.Hotel_Country_Name }}</h6>
                    <p class="card-text"><strong>Phone:</strong> {{ hotel.Phone_Number }}</p>
                    <p class="card-text"><strong>Email:</strong> {{ hotel.Email }}</p>
                </div>
            </div>
        </div>

        <!-- Rooms Cards -->
        <div class="col-md-6 col-lg-5">
            <div class="hotel-room-card card shadow-sm">
                {% set roomImages = [room.Image1, room.Image2, room.Image3] | filter(v => v) %}
                {% if roomImages %}
                    <div id="roomCarousel" class="carousel slide room-carousel" data-bs-ride="carousel">
                        <div class="carousel-inner h-100">
                            {% for img in roomImages %}
                                <div class="carousel-item {% if loop.first %}active{% endif %} h-100">
                                    <img src="{{ img }}" alt="Room Image" class="h-100 w-100">
                                </div>
                            {% endfor %}
                        </div>
                        {% if roomImages|length > 1 %}
                            <button class="carousel-control-prev" type="button" data-bs-target="#roomCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#roomCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </button>
                        {% endif %}
                    </div>
                {% endif %}
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ room.Room_Type }} Room</h5>
                    <p class="card-text"><strong>Price per night:</strong> € <span id="roomPrice">{{ room.Price }}</span></p>
                    <p class="card-text"><strong>Beds:</strong> {{ room.Bed_Type }}</p>
                    <p class="card-text"><strong>Size:</strong> {{ room.Room_Square_Meter }} m²</p>
                    <p class="card-text"><strong>Nights:</strong> <span id="nights">0</span></p>
                    <p class="card-text"><strong>Total Price:</strong> € <span id="totalPrice">0.00</span></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Booking Form -->
    <div class="booking-form-card">
        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}

        <h4>Complete Your Booking</h4>
        <form method="POST" class="row g-3">

            <!-- User Info -->
            <div class="col-md-6">
                <label class="form-label">Full Name</label>
                <input type="text" class="form-control" name="full_name" value="{{ fullName }}" required>
            </div>
            <div class="col-md-6">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" name="email" value="{{ user.email ?? '' }}" required>
            </div>
            <div class="col-md-6">
                <label class="form-label">Phone</label>
                <input type="text" class="form-control" name="phone" value="{{ user.phone ?? '' }}" required>
            </div>

            <!-- Check-in and Check-out -->
            <div class="col-md-3">
                <label class="form-label">Check-in</label>
                <input type="date" class="form-control" name="check_in" id="checkIn" value="{{ pending_checkin ?? '' }}" required>
            </div>
            <div class="col-md-3">
                <label class="form-label">Check-out</label>
                <input type="date" class="form-control" name="check_out" id="checkOut" value="{{ pending_checkout ?? '' }}" required>
            </div>

            <!-- Payment Info -->
            <div class="col-md-6">
                <label class="form-label">Card Number</label>
                <input type="text" class="form-control" name="card_number" value="{{ user.cardNumber ?? '' }}" required>
            </div>
            <div class="col-md-3">
                <label class="form-label">Expiry</label>
                <input type="text" class="form-control" name="card_expiry" value="{{ user.expiry ?? '' }}" required>
            </div>
            <div class="col-md-3">
                <label class="form-label">CVV</label>
                <input type="text" class="form-control" name="card_cvv" value="{{ user.cvv ?? '' }}" required>
            </div>

            <!-- Buttons -->
            <div class="col-12 d-flex justify-content-center gap-3 mt-3">
                <button type="submit" name="confirmBooking" class="btn btn-primary btn-lg">Confirm Booking</button>
                <button type="submit" name="cancelBooking" class="btn btn-danger btn-lg">Cancel Booking</button>
            </div>

        </form>
    </div>

</div>

<script src="javascripts/priceCalculation.js"></script>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>



</body>
</html>
