<!DOCTYPE html>
<html>
<head>
    <title>Hotel Booking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
</head>

<body class="bg-light">

<!-- Header text displayed in the image -->
<div class="hero mb-4 d-flex flex-column justify-content-center align-items-center text-center">
    <h1 class="hero-title">Hotel Booking</h1>
    <h2 class="hero-subtitle">Luxury hotels with unforgettable experiences</h2>
</div>

<!-- Text field to searcj hotels and rooms -->
<div class="container">
<form method="POST" class="row g-3 mb-4" id="searchForm">
    <div class="col-md-3">
        <label>Check-in</label>
        <input type="date" class="form-control" name="check_in" value="{{ check_in }}">
    </div>
    <div class="col-md-3">
        <label>Check-out</label>
        <input type="date" class="form-control" name="check_out" value="{{ check_out }}">
    </div>
    <div class="col-md-3">
        <label>Country</label>
        <select name="country" class="form-control" id="countrySelect">
            <option value="">All Countries</option>
            <!-- creating drop down list from availiable countries inside database -->
            {% for c in countries %}
                <!-- keeps the previous selected country visible -->
                <option value="{{ c.Hotel_Country_Name }}" 
                {% if country == c.Hotel_Country_Name %}
                selected
                {% endif %}>
                <!-- display countryy in the dropdown -->
                {{ c.Hotel_Country_Name }} 
                </option>
            {% endfor %}
        </select>
    </div>
    <div class="col-md-3">
        <label>City</label>
        <select name="city" class="form-control" id="citySelect">
            <option value="">All Cities</option>
             <!-- creating drop down list from availiable cities according to country inside database -->
            {% for c in cities %}
                <option value="{{ c.Hotel_City_Name }}" 
                {% if city == c.Hotel_City_Name %}
                selected
                {% endif %}>
                {{ c.Hotel_City_Name }}
                </option>
            {% endfor %}
        </select>
    </div>
    <!-- button to search -->
    <div class="col-md-12">
        <button class="btn btn-primary">Search</button>
    </div>
</form>

<!-- displar error message if text fiels is left empty-->
<div class="row g-4">
{% if hotels is empty %}
    <p class="text-center">No hotels found.</p>
{% endif %}

<!-- creating hotel cards with carousel, hotel detaild and view rooms details button -->
{% for hotel in hotels %}
    {% set himgs = [hotel.Hotel_Image, hotel.Hotel_Image2, hotel.Hotel_Image3]|filter(v => v) %}
    <div class="col-md-4">
        <div class="card hotel-card shadow-sm">
            {% if himgs %}
            <div id="carousel{{ hotel.Hotel_Id }}" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    {% for img in himgs %}
                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                            <img src="{{ img }}" class="d-block w-100" alt="Hotel Image">
                        </div>
                    {% endfor %}
                </div>
                {% if himgs|length > 1 %}
                    <button class="carousel-control-prev" type="button" data-bs-target="#carousel{{ hotel.Hotel_Id }}" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carousel{{ hotel.Hotel_Id }}" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                {% endif %}
            </div>
            {% endif %}
            <!-- button that triggers modal through javascript with class ViewDetailsButton-->
            <button class="btn btn-primary mt-auto ViewDetailsButton"
                    data-hotel-id="{{ hotel.Hotel_Id }}"
                    data-hotel-name="{{ hotel.Hotel_Name }}">
                View Rooms
            </button>
        </div>
    </div>
{% endfor %}
</div>
</div>

<!-- display modal with hotel rooms details and images -->
<div class="modal fade" id="roomsModal">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Rooms</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="roomsModalBody">Loading...</div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="javaScripts/indexJava.js"></script>
</body>
</html>
