<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Hotel Booking</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
<link rel="stylesheet" href="indexStyle.css?v=1.0">
</head>
<body class="index-page">

<!-- HEADER -->
<header class="indexheader text-center">
  <div class="container">
    <h1 class="indexheader-title">Hotel Booking</h1>
    <h2 class="indexheader-subtitle">Luxury hotels with unforgettable experiences</h2>
  </div>
</header>

<!-- Navigation menu with  login and logout -->
<nav class="navbar navbar-expand mb-4 bg-white shadow-sm">
    <div class="container d-flex align-items-center">
        <a href="index.php" class="navbar-brand text-gold fw-bold">
            Hotel Booking
        </a>

        <!-- Admin page  -->
        <ul class="navbar-nav ms-4">
            {% if isAdmin %}
                <li class="nav-item">
                    <a class="nav-link fw-bold text-gold" href="Administrator.php" style="font-size: 1.05rem;">
                        Administration
                    </a>
                </li>
            {% endif %}
        </ul>

        <!-- Displays welcome message to user and has Logout and Login -->
        <div class="ms-auto d-flex align-items-center">
            {% if user %}
                <span class="me-3 fw-bold text-gold" style="font-size: 1.05rem;">
                    Hello, {{ user.first_name }} {{ user.last_name }}
                </span>

                <form method="POST" action="logout.php" class="m-0">
                    <button type="submit" class="btn btn-outline-primary">
                        Logout
                    </button>
                </form>
            {% else %}
                <a href="Login.php" class="btn btn-outline-primary">
                    Login
                </a>
            {% endif %}
        </div>
    </div>
</nav>

<!-- Search -->
<div class="search-wrapper py-2">
    <div class="container">
        <form method="POST" id="searchForm">
            <div class="row gx-2 gy-2 align-items-end">
                <div class="col-auto">
                    <label class="form-label mb-0">Check-in</label>
                    <input type="date" class="form-control form-control-sm" name="check_in" value="{{ check_in }}">
                </div>
                <div class="col-auto">
                    <label class="form-label mb-0">Check-out</label>
                    <input type="date" class="form-control form-control-sm" name="check_out" value="{{ check_out }}">
                </div>
                <div class="col-auto">
                    <label class="form-label mb-0">Country</label>
                    <select name="country" class="form-select form-select-sm" id="country-select">
                        <option value="">Select Country</option>
                        {% for c in countries %}
                            <option value="{{ c.Hotel_Country_Name }}" {% if country == c.Hotel_Country_Name %}selected{% endif %}>
                                {{ c.Hotel_Country_Name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-auto" id="city-wrapper" style="{% if not country %}display:none;{% endif %}">
                    <label class="form-label mb-0">City</label>
                    <select name="city" class="form-select form-select-sm" id="city-select">
                        {% if country %}
                            <option value="">Select City</option>
                            {% for c in cities %}
                                <option value="{{ c.Hotel_City_Name }}" {% if city == c.Hotel_City_Name %}selected{% endif %}>
                                    {{ c.Hotel_City_Name }}
                                </option>
                            {% endfor %}
                        {% endif %}
                    </select>
                </div>
                <div class="col-auto">
                    <button class="btn btn-primary btn-sm fw-bold">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Hotels -->
<div class="container my-5">
    <div class="row g-4">
        {% if hotels is empty %}
            <p class="text-center">No hotels found.</p>
        {% endif %}

        {% for hotel in hotels %}
            {% set himgs = [hotel.Hotel_Image, hotel.Hotel_Image2, hotel.Hotel_Image3]|filter(v => v) %}
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    {% if himgs %}
                    <div id="carousel{{ hotel.Hotel_Id }}" class="carousel slide">
                        <div class="carousel-inner">
                            {% for img in himgs %}
                            <div class="carousel-item {% if loop.first %}active{% endif %}">
                                <img src="{{ img }}" class="d-block w-100 hotel-img" alt="Hotel Image">
                            </div>
                            {% endfor %}
                        </div>
                        {% if himgs|length > 1 %}
                        <button class="carousel-control-prev" type="button" data-bs-target="#carousel{{ hotel.Hotel_Id }}" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carousel{{ hotel.Hotel_Id }}" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </button>
                        {% endif %}
                    </div>
                    {% endif %}

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ hotel.Hotel_Name }}</h5>
                        <p class="card-subtitle mb-2 text-muted">{{ hotel.Hotel_Country_Name }}</p>
                        <p class="card-text">
                            {% for i in 1..hotel.Star_Rating %}
                                <span class="text-gold">â˜…</span>
                            {% endfor %}
                        </p>
                        <button class="btn btn-primary mt-auto ViewDetailsButton"
                            data-hotel-id="{{ hotel.Hotel_Id }}"
                            data-hotel-name="{{ hotel.Hotel_Name }}">
                            View Rooms
                        </button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<!-- Modal to display room types -->
<div class="modal fade" id="roomsModal" tabindex="-1" aria-labelledby="roomsModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="roomsModalLabel">Rooms</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="roomsModalBody">
        Loading...
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="javaScripts/indexJava.js"></script>
<script src="javaScripts/citiesdropdown.js"></script>
</body>
</html>
