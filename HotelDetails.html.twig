<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hotel Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="style.css">
</head>

<body>
<div class="container py-4">

  <header class="mb-3 text-center bg-secondary text-white py-3 shadow rounded">
    <h1 class="display-4">Hotel List and Details</h1>
  </header>

  <!-- Navigation -->
  <nav class="navbar navbar-expand bg-secondary mb-4">
    <div class="container">
      <a href="Administrator.php" class="btn btn-link text-white nav-link-hover">Administrator Page</a>
      <form action="logout.php" method="POST" class="d-inline me-3">
        <button type="submit" class="btn btn-link text-white nav-link-hover">Logout</button>
      </form>
    </div>
  </nav>

  <!-- Feedback Messages -->
  {% if message %}
    <div class="alert alert-success text-center">{{ message }}</div>
  {% endif %}
  {% if error %}
    <div class="alert alert-danger text-center">{{ error }}</div>
  {% endif %}

  <!-- Add Hotel Form -->
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Add New Hotel</h5>
      <form method="POST" class="row g-3">
        <div class="col-md-4"><input type="text" class="form-control" name="Hotel_Name" placeholder="Hotel Name" required></div>
        <div class="col-md-4"><input type="text" class="form-control" name="Hotel_Street_Name" placeholder="Street Name" required></div>
        <div class="col-md-4"><input type="text" class="form-control" name="Hotel_City_Name" placeholder="City Name" required></div>
        <div class="col-md-4"><input type="text" class="form-control" name="Hotel_Country_Name" placeholder="Country Name" required></div>
        <div class="col-md-4"><input type="text" class="form-control" name="Phone_Number" placeholder="Phone Number"></div>
        <div class="col-md-4"><input type="email" class="form-control" name="Email" placeholder="Hotel Email"></div>
        <div class="col-md-4"><input type="number" class="form-control" name="Star_Rating" placeholder="Star Rating (1â€“5)" min="1" max="5"></div>
        <div class="col-md-4"><input type="number" class="form-control" name="Number_of_Rooms" placeholder="Number of Rooms" min="1"></div>
        <div class="col-md-12"><input type="text" class="form-control" name="Hotel_Image" placeholder="Hotel Image URL (optional)"></div>
        <div class="col-12">
          <button type="submit" name="submitHotelRecord" class="btn btn-success">Add Hotel Record</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Filter Form -->
  <form method="POST" class="row g-3 mb-4">
    <div class="col-md-4">
      <label for="country" class="form-label fw-bold">Country</label>
      <select name="country" id="country" class="form-select">
        <option value="">All Countries</option>
        {% for country in countries %}
          <option value="{{ country }}" {% if country == selectedCountry %}selected{% endif %}>{{ country }}</option>
        {% endfor %}
      </select>
    </div>

    <div class="col-md-4">
      <label for="city" class="form-label fw-bold">City</label>
      <select name="city" id="city" class="form-select">
        <option value="">All Cities</option>
        {% for city in cities %}
          <option value="{{ city }}" {% if city == selectedCity %}selected{% endif %}>{{ city }}</option>
        {% endfor %}
      </select>
    </div>

    <div class="col-md-4 align-self-end">
      <button type="submit" name="filterHotels" class="btn btn-primary">Filter</button>
    </div>
  </form>

  <script>
    // Prepare a JS map of countries => cities
    const countryCityMap = {
      {% for country in countries %}
        "{{ country }}": [
          {% for row in hotels if row.Hotel_Country_Name == country %}
            "{{ row.Hotel_City_Name }}"{% if not loop.last %}, {% endif %}
          {% endfor %}
        ]{% if not loop.last %}, {% endif %}
      {% endfor %}
    };

    const countrySelect = document.getElementById('country');
    const citySelect = document.getElementById('city');

    countrySelect.addEventListener('change', function() {
      const selectedCountry = this.value;
      // Clear city options
      citySelect.innerHTML = '<option value="">All Cities</option>';

      if (selectedCountry && countryCityMap[selectedCountry]) {
        const cities = [...new Set(countryCityMap[selectedCountry])]; // remove duplicates
        cities.sort(); // optional: sort alphabetically
        cities.forEach(city => {
          const option = document.createElement('option');
          option.value = city;
          option.textContent = city;
          citySelect.appendChild(option);
        });
      }
    });
  </script>



  <!-- Hotel List -->
  <div class="row g-3">
    {% if hotels|length > 0 %}
      {% for row in hotels %}
        <div class="col-md-4">
          <div class="card h-100">
            {% if row.Hotel_Image %}
              <img src="{{ row.Hotel_Image|e }}" class="card-img-top" alt="{{ row.Hotel_Name|e }}" style="height:200px; object-fit:cover;">
            {% endif %}
            
            <div class="card-body">
              <form method="POST">
                <h5 class="card-title">
                <label class="form-label fw-bold">Hotel Name</label>
                <input type="text" class="form-control mb-2" name="Hotel_Name" value="{{ row.Hotel_Name|e }}">
            </h5>

            <p class="card-text">
                <div class="mb-2">
                    <label class="form-label fw-bold">Street Name</label>
                    <input type="text" class="form-control" name="Hotel_Street_Name" value="{{ row.Hotel_Street_Name|e }}">
                </div>

                <div class="mb-2">
                    <label class="form-label fw-bold">City</label>
                    <input type="text" class="form-control" name="Hotel_City_Name" value="{{ row.Hotel_City_Name|e }}">
                </div>

                <div class="mb-2">
                    <label class="form-label fw-bold">Country</label>
                    <input type="text" class="form-control" name="Hotel_Country_Name" value="{{ row.Hotel_Country_Name|e }}">
                </div>

                <div class="mb-2">
                    <label class="form-label fw-bold">Phone Number</label>
                    <input type="text" class="form-control" name="Phone_Number" value="{{ row.Phone_Number|e }}" placeholder="Phone Number">
                </div>

                <div class="mb-2">
                    <label class="form-label fw-bold">Email</label>
                    <input type="email" class="form-control" name="Email" value="{{ row.Email|e }}" placeholder="Hotel Email">
                </div>

                <div class="mb-2">
                    <label class="form-label fw-bold">Star Rating</label>
                    <input type="number" class="form-control" name="Star_Rating" value="{{ row.Star_Rating|e }}" min="1" max="5">
                </div>

                <div class="mb-2">
                    <label class="form-label fw-bold">Number of Rooms</label>
                    <input type="number" class="form-control" name="Number_of_Rooms" value="{{ row.Number_of_Rooms|e }}" min="1">
                </div>

                <div class="mb-2">
                    <label class="form-label fw-bold">Hotel Image URL</label>
                    <input type="text" class="form-control" name="Hotel_Image" value="{{ row.Hotel_Image|e }}" placeholder="Hotel Image URL">
                </div>
            </p>

                <input type="hidden" name="Hotel_Id" value="{{ row.Hotel_Id|e }}">
                <div class="d-flex justify-content-between mt-3">
                  <button type="submit" name="updatehotel" class="btn btn-primary btn-sm">Save Changes</button>
                  <button type="submit" name="delethotel" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this hotel?');">Delete</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      {% endfor %}
    {% else %}
      <p class="text-center">No hotels found.</p>
    {% endif %}
  </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
